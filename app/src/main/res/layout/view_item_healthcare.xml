<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Tech Talk Vol.23] How Much Storage is Really Needed in A Smart Phone"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            />
        <ImageView
            android:id="@+id/iv_fee"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            />

        <Button
            android:id="@+id/btn_vol"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Vol.23"
            android:textSize="10sp"
            android:layout_below="@+id/iv_fee"
            android:layout_alignTop="@+id/iv_fee"
            android:layout_marginTop="130dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/iv_fee">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pritty"/>
            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="jismarma"/>

         <TextView
             android:id="@+id/tv_no"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:drawableLeft="@drawable/ic_check_box_black_24dp"
             android:text="jismarma"/>

            <TextView
                android:id="@+id/tv_cmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_check_box_black_24dp"
                android:text="jismarma"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_check_box_black_24dp"
                android:text="jismarma"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
